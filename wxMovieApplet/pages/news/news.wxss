page {
  height: 100%;
  background-color: #f8f8f8;
}

.banner {
  width: 100%;
  height: 600rpx;

}

.banner-imgs {
  width: 100%;
  height: 600rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 20rpx;
  background: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: top;
}

.post-date {
  font-size: 20rpx;
  padding-left: 42rpx;
  line-height: 60rpx;
  color: #666;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  padding: 0 0 28rpx 24rpx;
  color: #333;
}

.title-image {
  width: 100%;
  height: 340rpx;
}

.text-intro {
  font-size: 24rpx;
  line-height: 36rpx;
  margin: 30rpx 20rpx;
  color: #878787;
}

.post-rank-num {
  display: flex;

}

.icon {
  width: 32rpx;
  height: 32rpx;
  padding-left: 28rpx;
}

.rank-num {
  font-size: 18rpx;
  padding-left: 16rpx;
  text-align: justify;
  color: rgb(165, 165, 165);
  line-height: 32rpx;
}